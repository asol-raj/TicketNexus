<!-- New Ticket Modal -->
<div class="modal fade" id="newTicketModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <form class="modal-content" id="newTicketForm" enctype="multipart/form-data">
      <div class="modal-header">
        <h5 class="modal-title">Create Ticket</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="vstack gap-2">
          <input class="form-control" name="subject" placeholder="Subject" required>
          <textarea class="form-control" name="description" placeholder="Describe the issue" rows="4"></textarea>
          <div class="row g-2">
            <div class="col-md-4">
              <label class="form-label">Due Option</label>
              <select class="form-select" name="due_option" id="dueOptionSelect">
                <option value="today">Today</option>
                <option value="tomorrow">By Tomorrow</option>
                <option value="this_week">By This Week</option>
                <option value="next_week">By Next Week</option>
                <option value="custom">Custom Date</option>
              </select>
            </div>
            <div class="col-md-4 d-none" id="customDueWrapper">
              <label class="form-label">Due Date</label>
              <input class="form-control" name="due_at" type="datetime-local">
            </div>

            <div class="col-md-4">
              <label class="form-label">Assign to (optional)</label>
              <select class="form-select" name="assigned_to" id="assigneeSelect">
                <option value="">Unassigned</option>
              </select>
            </div>
          </div>
          <div>
            <label class="form-label">Attachments</label>
            <input class="form-control" type="file" name="attachments" multiple>
            <div class="form-text">You can attach up to 10 files.</div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div id="ticketMsg" class="me-auto small"></div>
        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-primary" type="submit">Create Ticket</button>
      </div>
    </form>
  </div>
</div>

