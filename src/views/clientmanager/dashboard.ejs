<div class="container-fluid py-3">
  <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
    <h1 class="mb-0">Client Manager Dashboard</h1>
    <div class="d-flex gap-2">
      <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#newTicketModal">
        <span style="font-size:1.2rem; line-height:1;">üìù</span> New Ticket
      </button>
      <button class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#createEmployeeModal">
        <span class="me-1">‚ûï</span> Create Employee
      </button>
    </div>
  </div>

  <div class="row g-3">
    <!-- Middle: Tickets -->
    <div class="col-12 col-lg-8">
      <div class="card shadow-sm h-100">
        <div class="card-header fw-bold d-flex justify-content-between align-items-center">
          <span>All Tickets (Live)</span>
          <div class="btn-group btn-group-sm">
            <button class="btn btn-outline-secondary" id="fltAll">All</button>
            <button class="btn btn-outline-secondary" id="fltOpen">Open</button>
            <button class="btn btn-outline-secondary" id="fltInProg">In Progress</button>
            <button class="btn btn-outline-secondary" id="fltResolved">Resolved</button>
            <button class="btn btn-outline-secondary" id="fltClosed">Closed</button>
          </div>
        </div>
        <div class="table-responsive" style="max-height:70vh; overflow:auto;">
          <table class="table table-sm align-middle mb-0" id="ticketsTable">
            <thead class="table-light">
              <tr>
                <th>ID</th>
                <th>Subject</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Assignee</th>
                <th>Created</th>
                <th>Due</th>
              </tr>
            </thead>
            <tbody><!-- JS --></tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Right: Your Team (cards) -->
    <div class="col-12 col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-header fw-bold d-flex justify-content-between">
          <span>Your Team</span>
          <span class="small text-muted">Client Employees</span>
        </div>
        <div class="card-body">
          <div id="teamList" class="vstack gap-3">
            <!-- cards via JS -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Create Employee Modal -->
<div class="modal fade" id="createEmployeeModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form class="modal-content" id="createEmployeeForm">
      <div class="modal-header">
        <h5 class="modal-title">Create Client Employee</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body vstack gap-2">
        <div class="row g-2">
          <div class="col-6"><input class="form-control" name="first_name" placeholder="First name"></div>
          <div class="col-6"><input class="form-control" name="last_name" placeholder="Last name"></div>
        </div>
        <input class="form-control" name="username" placeholder="Username (optional)">
        <input class="form-control" name="email" type="email" placeholder="Email" required>
        <input class="form-control" name="password" type="password" placeholder="Password" required>
        <div>
          <label class="form-label mb-1">Date of joining</label>
          <input class="form-control" name="date_of_joining" type="date">
        </div>
      </div>
      <div class="modal-footer">
        <div id="empMsg" class="me-auto small"></div>
        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-success" type="submit">Create</button>
      </div>
    </form>
  </div>
</div>

<!-- New Ticket Modal (same as before) -->
<div class="modal fade" id="newTicketModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <form class="modal-content" id="newTicketForm" enctype="multipart/form-data">
      <div class="modal-header">
        <h5 class="modal-title">Create Ticket</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="vstack gap-2">
          <input class="form-control" name="subject" placeholder="Subject" required>
          <textarea class="form-control" name="description" placeholder="Describe the issue" rows="4"></textarea>
          <div class="row g-2">
            <div class="col-md-4">
              <label class="form-label">Priority</label>
              <select class="form-select" name="priority">
                <option value="low">Low</option>
                <option value="medium" selected>Medium</option>
                <option value="high">High</option>
                <option value="urgent">Urgent</option>
              </select>
            </div>
            <div class="col-md-4">
              <label class="form-label">Due at</label>
              <input class="form-control" name="due_at" type="datetime-local">
            </div>
            <div class="col-md-4">
              <label class="form-label">Assign to (optional)</label>
              <select class="form-select" name="assigned_to" id="assigneeSelect">
                <option value="">Unassigned</option>
              </select>
            </div>
          </div>
          <div>
            <label class="form-label">Attachments</label>
            <input class="form-control" type="file" name="attachments" multiple>
            <div class="form-text">You can attach up to 10 files.</div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div id="ticketMsg" class="me-auto small"></div>
        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-primary" type="submit">Create Ticket</button>
      </div>
    </form>
  </div>
</div>

<script type="module" src="/js/clientmanager.js"></script>
