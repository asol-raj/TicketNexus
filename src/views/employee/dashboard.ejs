<div class="container-fluid py-3">
  <!-- <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold">Employee Dashboard</h2>
  </div> -->

  <div class="row g-3">
    <!-- Left Column (col-3) -->
    <div class="col-md-2">
      <!-- Welcome -->
      <div class="card shadow-sm mb-3 text-center">
        <div class="card-body">
          <h5 class="text-primary">Welcome</h5>
          <p class="fw-bold mb-1">
            <?= emp.first_name ?>
            <?= emp.last_name ?>
          </p>
          <p class="text-muted mb-0">
            <i class="bi bi-person-badge"></i>
            Manager:
            <?= managerName || 'Not assigned' ?>
          </p>
        </div>
      </div>

      <!-- Logged In -->
      <div class="card shadow-sm mb-3 text-center">
        <div class="card-body">
          <h6 class="text-muted">Logged In</h6>
          <p class="fw-bold">
            <?= loginTime.toLocaleString() ?>
          </p>
          <span class="text-info small">
            <i class="bi bi-clock-history"></i> Elapsed:
            <?= elapsedMinutes ?> min
          </span>
        </div>
      </div>

      <!-- Ticket Stats -->
      <div class="card shadow-sm mb-3 text-center">
        <div class="card-body">
          <h6 class="text-muted">Ticket Stats</h6>
          <p>Today Assigned: <span class="fw-bold text-primary">
              <?= stats.today_assigned ?>
            </span></p>
          <p>Pending: <span class="fw-bold text-danger">
              <?= stats.pending ?>
            </span></p>
        </div>
      </div>
    </div>

    <!-- Middle Column (col-6) -->
    <div class="col-md-8">
      <!-- My Tickets -->
      <div class="card shadow-sm mb-2">
        <div class="card-header fw-bold bg-light">My Tickets</div>
        <div class="list-group list-group-flush" style="max-height:75vh; overflow:auto;">
          <? if (assigned.length) { ?>
          <? assigned.forEach(t => { ?>
          <a href="/employee/tickets/<?= t.id ?>" class="list-group-item list-group-item-action">
            <div class="d-flex justify-content-between">
              <span><strong>#
                  <?= t.id ?>
                </strong> ·
                <?= t.subject ?>
              </span>
              <span class="badge bg-secondary">
                <?= t.priority ?>
              </span>
            </div>
            <div class="small text-muted">Status:
              <?= t.status ?> · Updated
              <?= t.age_hours ?>h ago
            </div>
          </a>
          <? }) ?>
          <? } else { ?>
          <div class="list-group-item text-muted">No tickets assigned.</div>
          <? } ?>
        </div>
      </div>

      <!-- Unassigned Tickets -->
      <div class="card shadow-sm">
        <div class="card-header fw-bold bg-light">Unassigned Tickets</div>
        <div class="list-group list-group-flush" style="max-height:50vh; overflow:auto;">
          <? if (unassigned.length) { ?>
          <? unassigned.forEach(t => { ?>
          <div class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <a href="/employee/tickets/<?= t.id ?>" class="fw-bold text-decoration-none">#
                <?= t.id ?>
              </a>
              <div class="small text-muted">
                <?= t.subject ?>
              </div>
            </div>
            <button class="btn btn-sm btn-outline-success self-assign" data-ticket-id="<?= t.id ?>">
              <i class="bi bi-hand-index-thumb"></i> Take
            </button>
          </div>
          <? }) ?>
          <? } else { ?>
          <div class="list-group-item text-muted">No unassigned tickets.</div>
          <? } ?>
        </div>
      </div>
    </div>

    <!-- Right Column (col-3) -->
    <div class="col-md-2">
      <!-- My Tickets by Status -->
      <div class="card shadow-sm mb-3">
        <div class="card-header fw-bold bg-light">My Tickets by Status</div>
        <div class="card-body">
          <canvas id="myTicketsChart" style="max-height:180px;"></canvas>
          <div id="chartData" data-open="<?= chart.open ?>" data-inprogress="<?= chart.in_progress ?>"
            data-resolved="<?= chart.resolved ?>" data-closed="<?= chart.closed ?>"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
<script type="module" src="/js/employee.js"></script>