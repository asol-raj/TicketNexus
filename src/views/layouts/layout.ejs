    <!-- === Navbar (insert in layouts/layout.ejs) === -->
    <? if (!hideNavbar) { ?>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="/">TicketNexus</a>

                <div class="d-flex align-items-center gap-3 ms-auto">
                    <? if (typeof user !== 'undefined' && user) { ?>
                    <div class="d-flex align-items-center gap-2 text-light">
                        <span class="small">Welcome, <strong>
                                <?= (user.first_name || user.last_name)
                    ? ((user.first_name || '') + ' ' + (user.last_name || '')).trim()
                    : (user.username || user.email) ?>
                            </strong></span>

                        <span class="badge bg-info text-dark text-uppercase">
                            <?= user.role === 'admin'
                    ? (user.admin_type === 'internal' ? 'Internal Admin' :
                        (user.admin_type === 'client' ? 'Client Admin' : 'Admin'))
                    : user.role ?>
                        </span>
                    </div>

                    <? if (user.role === 'super_admin') { ?>
                    <a class="btn btn-outline-light btn-sm" href="/admin/logout">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                    <? } else { ?>
                    <a class="btn btn-outline-light btn-sm" href="/auth/logout">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                    <? } ?>
                    <? } ?>
                </div>
            </div>
        </nav>
    <? } ?>
    <!-- === /Navbar === -->

