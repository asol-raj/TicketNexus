<div class="container-fluid py-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><?= title ?></h1>
    <span class="badge bg-primary text-uppercase">Manager</span>
  </div>

  <div class="row g-3">
    <!-- Left: Ticket Status Overview -->
    <div class="col-12 col-lg-2">
      <div class="card shadow-sm h-100">
        <div class="card-header fw-bold">Ticket Overview</div>
        <div class="list-group list-group-flush small">
          <div class="list-group-item d-flex justify-content-between">
            <span>Open</span><span class="badge bg-info">
              <?= stats.open || 0 ?>
            </span>
          </div>
          <div class="list-group-item d-flex justify-content-between">
            <span>In Progress</span><span class="badge bg-warning text-dark">
              <?= stats.in_progress || 0 ?>
            </span>
          </div>
          <div class="list-group-item d-flex justify-content-between">
            <span>Resolved</span><span class="badge bg-success">
              <?= stats.resolved || 0 ?>
            </span>
          </div>
          <div class="list-group-item d-flex justify-content-between">
            <span>Closed</span><span class="badge bg-secondary">
              <?= stats.closed || 0 ?>
            </span>
          </div>
          <hr class="my-1">
          <div class="list-group-item d-flex justify-content-between">
            <span>High</span><span class="badge bg-danger">
              <?= stats.high || 0 ?>
            </span>
          </div>
          <div class="list-group-item d-flex justify-content-between">
            <span>Medium</span><span class="badge bg-primary">
              <?= stats.medium || 0 ?>
            </span>
          </div>
          <div class="list-group-item d-flex justify-content-between">
            <span>Low</span><span class="badge bg-success">
              <?= stats.low || 0 ?>
            </span>
          </div>
          <div class="list-group-item d-flex justify-content-between">
            <span>Urgent</span><span class="badge bg-dark">
              <?= stats.urgent || 0 ?>
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Middle: Team overview -->
    <div class="col-12 col-lg-6">
      <div class="card shadow-sm h-100">
        <div class="card-header fw-bold">Your Team</div>
        <div class="table-responsive" style="max-height:72vh; overflow:auto;">
          <table class="table table-sm align-middle mb-0" id="teamTable">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Open Tickets</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <? if (team && team.length) { ?>
              <? team.forEach(m => { ?>
              <tr data-employee-id="<?= m.employee_id ?>" data-user-id="<?= m.user_id ?>">
                <td>
                  <?= m.name ?>
                </td>
                <td>
                  <?= m.position || '-' ?>
                </td>
                <td><span class="badge bg-info">
                    <?= m.open_assigned ?>
                  </span></td>
                <td>
                  <? if (m.online) { ?>
                  <span class="badge bg-success">Online</span>
                  <? } else { ?>
                  <span class="badge bg-secondary">Offline</span>
                  <? } ?>
                </td>
                <td>
                  <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                      Actions
                    </button>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item act-edit" href="#" data-employee-id="<?= m.employee_id ?>">Edit
                          Profile</a></li>
                      <li><a class="dropdown-item act-reset" href="#" data-employee-id="<?= m.employee_id ?>">Reset
                          Password</a></li>
                    </ul>
                  </div>
                </td>
              </tr>
              <? }) ?>
              <? } else { ?>
              <tr>
                <td colspan="5" class="text-muted">No team members yet.</td>
              </tr>
              <? } ?>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Right: Tickets -->
    <div class="col-12 col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-header fw-bold d-flex align-items-center justify-content-between">
          <span>Tickets</span>
          <div class="btn-group btn-group-sm" role="group">
            <button class="btn btn-outline-primary active" id="filterActionable">Actionable</button>
            <button class="btn btn-outline-primary" id="filterOpen">Open</button>
            <button class="btn btn-outline-primary" id="filterUnassigned">Unassigned</button>
            <button class="btn btn-outline-primary" id="filterResolved">Resolved</button>
            <button class="btn btn-outline-secondary" id="filterClosed">Closed</button>
          </div>

        </div>
        <div class="list-group list-group-flush" id="ticketList" style="max-height:72vh; overflow:auto;">
          <? if (tickets && tickets.length) { ?>
          <? tickets.forEach(t => { ?>
          <div class="list-group-item ticket-item" data-status="<?= t.status ?>"
            data-assignee="<?= t.assignee_label || '' ?>">
            <div class="d-flex justify-content-between">
              <strong>
                <a href="/manager/tickets/<?= t.id ?>" target="_blank" class="text-decoration-none">
                  #
                  <?= t.id ?> ·
                  <?= t.subject || 'Ticket' ?>
                </a>
              </strong>
              <span class="badge bg-secondary">
                <?= t.priority || 'n/a' ?>
              </span>
            </div>
            <div class="small text-muted mb-2">
              Status:
              <?= t.status || 'n/a' ?> · Assignee:
              <?= t.assignee_label || 'Unassigned' ?>
            </div>           
          </div>
          <? }) ?>
          <? } else { ?>
          <div class="list-group-item text-muted">No tickets found.</div>
          <? } ?>
        </div>
      </div>
    </div>

  </div>
</div>

<!-- Employee Edit Modal -->
<div class="modal fade" id="editEmployeeModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form class="modal-content" id="profileForm">
      <div class="modal-header">
        <h5 class="modal-title">Edit Employee Profile</h5>
        <button class="btn-close" type="button" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body vstack gap-2">
        <input type="hidden" name="employee_id" id="pf_employee_id">
        <div>
          <label class="form-label">First name</label>
          <input class="form-control" name="first_name" id="pf_first_name">
        </div>
        <div>
          <label class="form-label">Last name</label>
          <input class="form-control" name="last_name" id="pf_last_name">
        </div>
        <div>
          <label class="form-label">Position</label>
          <input class="form-control" name="position" id="pf_position">
        </div>
        <div>
          <label class="form-label">Date of Joining</label>
          <input class="form-control" type="date" name="date_of_joining" id="pf_doj">
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-primary" type="submit">Save</button>
      </div>
    </form>
  </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetPwModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form class="modal-content" id="resetPwForm">
      <div class="modal-header">
        <h5 class="modal-title">Reset Password</h5>
        <button class="btn-close" type="button" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body vstack gap-2">
        <input type="hidden" name="employee_id" id="rp_employee_id">
        <div>
          <label class="form-label">New Password</label>
          <input class="form-control" type="password" name="new_password" id="rp_new_password">
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-danger" type="submit">Reset</button>
      </div>
    </form>
  </div>
</div>

