<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Super Admin Dashboard</h1>
    <span class="badge bg-warning text-dark text-uppercase">Super Admin</span>
  </div>

  <div class="row g-3">
    <!-- Left: Actions -->
    <div class="col-12 col-lg-3">
      <div class="card shadow-sm">
        <div class="card-header fw-semibold">Actions</div>
        <div class="card-body d-grid gap-2">
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalNewClient">
            New Client
          </button>
          <button class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#modalNewInternalAdmin">
            New Internal Admin
          </button>
          <button class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#modalNewClientAdmin">
            New Client Admin
          </button>
        </div>
      </div>
    </div>

    <!-- Center: Metrics -->
    <div class="col-12 col-lg-6">
      <div class="row g-3">
        <div class="col-6">
          <div class="card shadow-sm">
            <div class="card-body">
              <div class="text-muted small">Total Clients</div>
              <div class="display-6"><?= stats.total_clients ?></div>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="card shadow-sm">
            <div class="card-body">
              <div class="text-muted small">Total Users</div>
              <div class="display-6"><?= stats.total_users ?></div>
            </div>
          </div>
        </div>

        <div class="col-12">
          <div class="card shadow-sm">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <div class="fw-semibold">Internal Staff</div>
                  <div class="small text-muted">Admins / Managers / Employees</div>
                </div>
                <div class="display-6"><?= stats.internal_total ?></div>
              </div>
              <div class="mt-2">
                <span class="badge bg-dark me-2">Admins: <?= stats.internal_admins ?></span>
                <span class="badge bg-secondary me-2">Managers: <?= stats.internal_managers ?></span>
                <span class="badge bg-secondary">Employees: <?= stats.internal_employees ?></span>
              </div>
            </div>
          </div>
        </div>

        <div class="col-12">
          <div class="card shadow-sm">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <div class="fw-semibold">External Staff</div>
                  <div class="small text-muted">Admins / Managers / Employees</div>
                </div>
                <div class="display-6"><?= stats.external_total ?></div>
              </div>
              <div class="mt-2">
                <span class="badge bg-success me-2">Admins: <?= stats.client_admins ?></span>
                <span class="badge bg-secondary me-2">Managers: <?= stats.client_managers ?></span>
                <span class="badge bg-secondary">Employees: <?= stats.client_employees ?></span>
              </div>
            </div>
          </div>
        </div>

        <div class="col-6">
          <div class="card shadow-sm">
            <div class="card-body">
              <div class="text-muted small">Open Tickets</div>
              <div class="display-6"><?= stats.open_tickets ?></div>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="card shadow-sm">
            <div class="card-body">
              <div class="text-muted small">Closed Tickets</div>
              <div class="display-6"><?= stats.closed_tickets ?></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right: Admins -->
    <div class="col-12 col-lg-3">
      <div class="card shadow-sm mb-3">
        <div class="card-header fw-semibold">Internal Admins</div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-sm mb-0">
              <thead><tr><th>#</th><th>Email</th></tr></thead>
              <tbody id="internalAdminsTable"><tr><td colspan="2" class="text-muted">Loading…</td></tr></tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-header fw-semibold">Client Admins</div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-sm mb-0">
              <thead><tr><th>Client</th><th>Email</th></tr></thead>
              <tbody id="clientAdminsTable"><tr><td colspan="2" class="text-muted">Loading…</td></tr></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- ===== Modals ===== -->

  <!-- New Client -->
  <div class="modal fade" id="modalNewClient" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Create New Client</h5>
          <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="createClientForm" class="vstack gap-2">
            <input class="form-control" name="name" placeholder="Client name" required />
            <input class="form-control" name="code" placeholder="Client code (optional)" />
            <button class="btn btn-primary mt-2" type="submit">Create Client</button>
          </form>
          <div id="clientMsg" class="mt-2 small"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- New Internal Admin -->
  <div class="modal fade" id="modalNewInternalAdmin" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Create Internal Admin</h5>
          <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="createInternalAdminForm" class="vstack gap-2">
            <select class="form-select" name="clientId" id="clientSelectForInternal" required>
              <option value="">Select a client…</option>
            </select>
            <input class="form-control" name="email" type="email" placeholder="Email" required />
            <input class="form-control" name="password" type="password" placeholder="Password" required />
            <input class="form-control" name="first_name" placeholder="First name (optional)" />
            <input class="form-control" name="last_name" placeholder="Last name (optional)" />
            <input class="form-control" name="username" placeholder="Username (optional)" />
            <button class="btn btn-dark mt-2" type="submit">Create Internal Admin</button>
          </form>
          <div id="internalAdminMsg" class="mt-2 small"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- New Client Admin -->
  <div class="modal fade" id="modalNewClientAdmin" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Create Client Admin</h5>
          <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="createClientAdminForm" class="vstack gap-2">
            <select class="form-select" name="clientId" id="clientSelectForClientAdmin" required>
              <option value="">Select a client…</option>
            </select>
            <input class="form-control" name="email" type="email" placeholder="Email" required />
            <input class="form-control" name="password" type="password" placeholder="Password" required />
            <input class="form-control" name="first_name" placeholder="First name (optional)" />
            <input class="form-control" name="last_name" placeholder="Last name (optional)" />
            <input class="form-control" name="username" placeholder="Username (optional)" />
            <button class="btn btn-success mt-2" type="submit">Create Client Admin</button>
          </form>
          <div id="clientAdminMsg" class="mt-2 small"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="module" src="/js/supadmin.js"></script>
